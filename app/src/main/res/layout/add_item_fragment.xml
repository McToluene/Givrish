<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    tools:layout_editor_absoluteX="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.AddItemFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/headerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/constraintLayout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/AddheaderImage"
                            android:layout_width="31dp"
                            android:layout_height="32dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_card_giftcard_black_24dp" />

                        <TextView
                            android:id="@+id/tvCourse_Name"
                            android:layout_width="203dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/add_item_header"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintStart_toEndOf="@+id/AddheaderImage"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/saveItemtv"
                            style="@style/buttonCustom"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="Add"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/tvCourse_Name"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/mainCategory_layout"
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/headerCardView">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/mainCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/subCategory_layout"
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/mainCategory_layout">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/subCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ItemNameLayout"
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/subCategory_layout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ItemName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/Item_name"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ItemDescriptionLayout"
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/ItemNameLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ItemDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/item_description"
                                android:inputType="textMultiLine" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/addImageLayout"
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            app:layout_constraintTop_toBottomOf="@id/ItemDescriptionLayout">

                            <LinearLayout
                                android:id="@+id/addImageLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/addImagebtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:padding="5dp"
                                    android:src="@android:drawable/ic_input_add"
                                    app:backgroundTint="@color/colorPrimary"
                                    app:borderWidth="0.1dp"
                                    app:fabSize="normal" />
                            </LinearLayout>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/selectColorLayout"
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/addImageLayout">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/ItemColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ItemTagsLayout"
                            app:layout_constraintTop_toBottomOf="@id/selectColorLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ItemTags"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/item_tag"
                                android:inputType="textMultiLine" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/btnAddLayout"
                            style="@style/addItemLayouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:paddingBottom="40dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ItemTagsLayout">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAdditem"
                                style="@style/buttonCustom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add item" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>